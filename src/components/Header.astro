<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsiv Header Menu</title>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        /* Smooth transition for background change */
        header {
            transition: background-color 0.3s ease;
            box-shadow: 0px 0px 9px rgba(41, 41, 41, 0.25);
        }
        .scrolled {
            background-color: #ffffffe9; /* Let gennemskinnelig hvid */
            box-shadow: 0px 0px 9px rgba(41, 41, 41, 0.25); /* Tilf√∏jet skygge for dybde */
        }
    </style>
</head>

<body x-data="{ showMenu: false, scrolled: false }" @scroll.window="scrolled = window.pageYOffset > 50">

    <!-- Header -->
    <header :class="scrolled ? 'scrolled' : 'bg-transparent'" class="fixed top-0 left-0 w-full z-50">
        <div class="flex justify-between items-center max-w-7xl mx-auto px-4 py-4">
            <!-- Logo -->
            <a href="/" class="flex-1 lg:flex-none text-center lg:text-left">
                <div id="logo" class="flex justify-center lg:justify-start items-center ml-10 lg:ml-0">
                    <img src="/svg/favicon.svg" alt="Logo for hjemmesiden" class="h-10" />
                </div>
            </a>

            <!-- Desktop Menu (visible on large screens) -->
            <nav class="hidden lg:flex space-x-24 ml-6">
                <a href="#hero" class="text-primary text-1xl hover:text-accent transition">Projects</a>
                <a href="#aboutme" class="text-primary text-1xl hover:text-accent transition">About</a>
                <a href="#myskills" class="text-primary text-1xl hover:text-accent transition">Skills</a>
                <a href="#contact" class="text-primary text-1xl hover:text-accent transition">Contact</a>
            </nav>

            <!-- Burger Menu for mobile -->
            <button @click="showMenu = !showMenu" class="lg:hidden text-seasalt focus:outline-none ml-4">
                <!-- Icon -->
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h20M4 12h20m-7 6h7"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu (visible when showMenu is true) -->
        <nav x-show="showMenu"
             x-transition:enter="transition ease-out duration-500"
             x-transition:enter-start="opacity-0 transform -translate-y-full"
             x-transition:enter-end="opacity-100 transform translate-y-0"
             class="lg:hidden bg-white w-full py-2">
            <ul class="flex flex-col items-left ml-24 mt-12 mb-12 space-y-8">
                <li>
                    <a href="#hero" @click="showMenu = false" class="text-black text-2xl hover:text-accent transition">Projects</a>
                </li>
                <li>
                    <a href="#aboutme" @click="showMenu = false" class="text-black text-2xl hover:text-accent transition">About</a>
                </li>
                <li>
                    <a href="#myskills" @click="showMenu = false" class="text-black text-2xl hover:text-accent transition">Skills</a>
                </li>
                <li>
                    <a href="#contact" @click="showMenu = false" class="text-black text-2xl hover:text-accent transition">Contact</a>
                </li>
            </ul>
        </nav>
    </header>
</body>
</html>

