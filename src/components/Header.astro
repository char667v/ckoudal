<!DOCTYPE html>
<html lang="da">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Responsiv Header Menu</title>
    <script src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        header {
            transition: background-color 0.3s ease;
            box-shadow: 0 0 9px rgba(41, 41, 41, 0.25);
        }
        .scrolled {
            background-color: rgba(255, 255, 255, 0.91);
        }
    </style>
</head>

<body x-data="{ showMenu: false, scrolled: false }" @scroll.window="scrolled = window.pageYOffset > 50">
    <!-- Header -->
    <header :class="scrolled ? 'scrolled' : 'bg-transparent'" class="fixed top-0 left-0 w-full z-50">
        <div class="flex justify-between items-center max-w-7xl mx-auto px-4 py-4">
            <!-- Logo -->
            <a href="/" id="logo" class="flex items-center">
                <h2 class="text-2xl">DDCK</h2>
            </a>

            <!-- Desktop Menu (visible on large screens) -->
            <nav class="hidden lg:flex space-x-4 ml-6">
                <a href="/#section2" class="font-bold uppercase hover:text-secondary transition">About</a>
                <a href="/#section3" class="font-bold uppercase hover:text-secondary transition">Skills</a>
                <a href="/#section4" class="font-bold uppercase hover:text-secondary transition">Projects</a>
                <a href="/#section5" class="font-bold uppercase hover:text-secondary transition">Contact</a>
            </nav>

            <!-- Burger Menu for mobile -->
            <button @click="showMenu = !showMenu" class="lg:hidden focus:outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h20M4 12h20m-7 6h7"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu (visible when showMenu is true) -->
        <nav x-show="showMenu" 
             x-transition:enter="transition ease-out duration-500"
             x-transition:enter-start="opacity-0 transform -translate-y-full"
             x-transition:enter-end="opacity-100 transform translate-y-0"
             class="lg:hidden bg-white w-full py-2">
            <ul class="flex flex-col items-start ml-6 mt-6 mb-6 space-y-4">
                <li><a href="/#section1" class="font-bold uppercase hover:text-secondary transition">Home</a></li>
                <li><a href="/#section2" class="font-bold uppercase hover:text-secondary transition">About</a></li>
                <li><a href="/#section3" class="font-bold uppercase hover:text-secondary transition">Skills</a></li>
                <li><a href="/#section4" class="font-bold uppercase hover:text-secondary transition">Projects</a></li>
                <li><a href="/#section5" class="font-bold uppercase hover:text-secondary transition">Contact</a></li>
            </ul>
        </nav>
    </header>
</body>
</html>
